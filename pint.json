{
    "preset": "laravel",
    "rules": {
        "binary_operator_spaces": {
            "operators": {
                "=>": "align",
                "=": "align"
            }
        },
        "concat_space": {
            "spacing": "one"
        },
        "class_attributes_separation": {
            "elements": {
                "method": "one",
                "property": "one"
            }
        },
        "no_unused_imports": true,
        "ordered_imports": {
            "sort_algorithm": "length"
        },
        "single_quote": true,
        "not_operator_with_successor_space": true,
        "no_empty_comment": true,
        "no_extra_blank_lines": {
            "tokens": [
                "extra",
                "throw",
                "use"
            ]
        },
        "phpdoc_align": {
            "align": "left"
        }
    }
}